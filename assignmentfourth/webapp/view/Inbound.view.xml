<mvc:View controllerName="assignmentfourth.controller.Inbound"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">

    <Page title="{i18n>title}">
        <content>
            <VBox alignItems="Center" class="sapUiLargeMarginTop">

                <Title text="Screen-9"></Title>
                <Title text="Please enter your truck no." class="sapUiSmallMargin"></Title>
                <Input id="number" width="230px"></Input>

                <HBox >
                    <Button width="100px" press="continue" text="Continue" class="sapUiSmallMargin"></Button>
                    <Button width="100px" press="back" text="Back" class="sapUiSmallMargin"></Button>
                </HBox>
                
            </VBox>
        </content>
    </Page>
</mvc:View>