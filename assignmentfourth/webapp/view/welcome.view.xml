<mvc:View
   controllerName="assignmentfourth.controller.welcome"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns="sap.m">
   <Page showHeader="false">
      <VBox alignItems="Center" justifyContent="Center" class="sapUiMediumMargin">
         <Title text="Welcome to EXLTUBE!" class="sapUiMediumMarginBottom"/>
         <Text text="Please start the check-in process by selecting one of the options below." class="sapUiMediumMarginBottom"/>
         
         <HBox justifyContent="SpaceBetween" width="50%" class="sapUiMediumMargin">
            <Button
               text="I am picking up a shipment from EXLTUBE."
               press=".onPickupPress"
               type="Emphasized"
               class="sapUiTinyMarginEnd"/>
               
            <Button
               text="I am dropping off a delivery at EXLTUBE."
               press=".onDropoffPress"
               type="Emphasized"
               />
         </HBox>
      </VBox>
   </Page>
</mvc:View>